generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int      @id @default(autoincrement())
  employeeId Int?     @unique
  firstName  String
  lastName   String
  gender     Gender?
  email      String   @unique
  phone      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
